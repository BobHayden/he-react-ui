fixtures="$(find ./src  | grep .fixture.js$)"


while read -r fixture_path; do
  parent=$(dirname "$(dirname "$fixture_path")")
  fixture_filename=$(basename "$fixture_path")
  fixture_name=${fixture_filename%.fixture.js}
  mkdir -p "$parent/tests"
  test_path="$parent/tests/$fixture_name.test.js"

  [[ ! -f "$test_path" ]] && echo "import fixture from '../fixtures/$fixture_filename'\n//FIXME\n\ntestFixture(fixture, '$fixture_name')" > "$test_path"
done <<< "$fixtures"

